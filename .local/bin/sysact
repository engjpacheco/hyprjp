#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='halt' ;;
esac

case "$(printf "ğŸ”’ lock\nâ™»ï¸ renew dwm\nğŸ» hibernate\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown" |dmenu -i -l 20 -p 'Action: ' )" in
	'ğŸ”’ lock') lock ;;
	'â™»ï¸ renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ» hibernate') doas  zzz ;;
	'ğŸ”ƒ reboot') reboot ;;
	'ğŸ–¥ï¸shutdown') doas shutdown -P now ;;
	*) exit 1 ;;
esac
